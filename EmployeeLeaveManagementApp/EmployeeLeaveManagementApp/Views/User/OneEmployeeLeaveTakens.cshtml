@model IEnumerable<EmployeeLeaveManagementApp.ViewModel.EmployeeLeaveInfo>
@{
    ViewBag.Title = "OneEmployeeLeaveTakens";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}



<div id="page-wrapper">
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayName("SN")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Start Date")
            </th>
            <th>
                @Html.DisplayName("End Date")
            </th>
            <th>
                @Html.DisplayName("Total Day")
            </th>
            <th>
                @Html.DisplayName("Entry Date")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

        </tr>
        <h3 style="text-align: center">Show All Leave Status</h3>
        <hr />
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }

    </table>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}