@model IEnumerable<EmployeeLeaveManagementApp.ViewModel.EmployeeLeaveInfo>
@{
    ViewBag.Title = "AproveOrReject";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    
<div id="page-wrapper">
    
    <table class="table table-striped table-bordered">
        
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Start Date")
            </th>
            <th>
                @Html.DisplayName("End Date")
            </th>
            <th>
                @Html.DisplayName("Leave Type")
            </th>
            <th>
                @Html.DisplayName("Total Day")
            </th>
            <th>
                @Html.DisplayName("Entry Date")
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>

        </tr>
        <h3 style="text-align: center">Leave Request Status</h3>
        <hr />
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    @Html.ActionLink("Approve", "Approve", new { id = item.Id }) |
                    @Html.ActionLink("Reject", "Reject", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}